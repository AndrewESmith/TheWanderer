{
  "name": "thewanderer",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "dependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/react-dom": "^19.1.6",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "cross-env NODE_NO_WARNINGS=1 node start-with-tests.js",
    "start:no-tests": "cross-env NODE_NO_WARNINGS=1 vite --mode development",
    "dev": "cross-env NODE_NO_WARNINGS=1 vite --mode development",
    "build": "vite build --mode production",
    "preview": "vite preview",
    "test": "vitest run -c vitest.config.ts --bail=1",
    "test:watch": "vitest -c vitest.config.ts",
    "test:isolated": "node --experimental-vm-modules run-tests.js",
    "test:no-warnings": "cross-env NODE_NO_WARNINGS=1 vitest run -c vitest.config.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:visual": "node scripts/run-visual-tests.js",
    "test:visual:update": "node scripts/run-visual-tests.js --update-snapshots",
    "test:visual:generate": "node scripts/generate-visual-baselines.js",
    "test:visual:chromium": "node scripts/run-visual-tests.js --browser=chromium",
    "test:visual:firefox": "node scripts/run-visual-tests.js --browser=firefox",
    "test:visual:webkit": "node scripts/run-visual-tests.js --browser=webkit",
    "test:visual:core": "node scripts/run-visual-tests.js --collection=core",
    "test:visual:responsive": "node scripts/run-visual-tests.js --collection=responsive",
    "test:visual:cross-browser": "node scripts/run-visual-tests.js --collection=cross-browser",
    "test:visual:image-loading": "node scripts/run-visual-tests.js --collection=image-loading",
    "test:visual:game-state": "node scripts/run-visual-tests.js --collection=game-state",
    "test:visual:accessibility": "node scripts/run-visual-tests.js --collection=accessibility",
    "test:visual:core:update": "node scripts/run-visual-tests.js --collection=core --update-snapshots",
    "test:visual:responsive:update": "node scripts/run-visual-tests.js --collection=responsive --update-snapshots",
    "test:visual:cross-browser:update": "node scripts/run-visual-tests.js --collection=cross-browser --update-snapshots",
    "test:visual:image-loading:update": "node scripts/run-visual-tests.js --collection=image-loading --update-snapshots",
    "test:visual:game-state:update": "node scripts/run-visual-tests.js --collection=game-state --update-snapshots",
    "test:visual:accessibility:update": "node scripts/run-visual-tests.js --collection=accessibility --update-snapshots",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@executeautomation/playwright-mcp-server": "^1.0.6",
    "@playwright/test": "^1.54.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/node": "^24.0.15",
    "@types/react": "^19.1.9",
    "@vitejs/plugin-react": "^4.7.0",
    "cross-env": "^7.0.3",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  }
}
