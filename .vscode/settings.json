{
  "json.schemas": [
    {
      "fileMatch": [
        "**/src/Playwright/config.json"
      ],
      "url": "./src/Playwright/config.schema.json"
    }
  ],
  "vitest.commandLine": "npm run test:isolated",
  "vitest.include": [
    "src/tests/**/*.test.ts",
    "src/tests/**/*.test.tsx"
  ],
  "vitest.exclude": [
    "**/node_modules/**",
    "**/dist/**"
  ],
  "vitest.enable": true,
  "vitest.environment": "jsdom",
  "typescript.validate.enable": true,
  "vitest.nodeEnv": {
    "NODE_ENV": "test"
  },
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "javascript.validate.enable": true,
  "testing.automaticallyOpenPeekView": "never",
  "typescript.autoClosingTags": false
}